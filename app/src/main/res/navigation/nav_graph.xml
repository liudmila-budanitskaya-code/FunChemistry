<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/quizListFragment">

    <fragment
        android:id="@+id/quizListFragment"
        android:name="site.budanitskaya.chemistryquiz.fine.QuizListFragment"
        android:label="fragment_quiz_list"
        tools:layout="@layout/fragment_quiz_list" >
        <action
            android:id="@+id/action_quizListFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
    </fragment>
    <fragment
        android:id="@+id/questionFragment"
        android:name="site.budanitskaya.chemistryquiz.fine.questionscreen.QuestionFragment"
        android:label="fragment_question"
        tools:layout="@layout/fragment_question" >
        <action
            android:id="@+id/action_questionFragment_to_gameOverFragment"
            app:destination="@id/gameOverFragment" />
        <argument
            android:name="topic"
            app:argType="site.budanitskaya.chemistryquiz.fine.domain.Topic" />
    </fragment>
    <fragment
        android:id="@+id/gameOverFragment"
        android:name="site.budanitskaya.chemistryquiz.fine.GameOverFragment"
        android:label="fragment_game_over"
        tools:layout="@layout/fragment_game_over" >
        <action
            android:id="@+id/action_gameOverFragment_to_quizListFragment"
            app:destination="@id/quizListFragment" />
    </fragment>
</navigation>