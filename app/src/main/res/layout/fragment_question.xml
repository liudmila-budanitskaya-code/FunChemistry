<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="game"
            type="site.budanitskaya.chemistryquiz.fine.questionscreen.QuestionFragment" />

        <variable
            name="viewModel"
            type="site.budanitskaya.chemistryquiz.fine.questionscreen.QuestionViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/db1_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center"
            android:orientation="vertical"
            android:textAppearance="?android:attr/textAppearanceLarge">

            <LinearLayout
                android:id="@+id/frameLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                tools:context=".questionscreen.QuestionFragment">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/timer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="TextView"
                        android:textSize="20sp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    style="?android:attr/progressBarStyleHorizontal" />

                <TextView
                    android:id="@+id/no_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:text="TextView"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/question_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="57dp"
                    tools:layout_editor_absoluteY="148dp"
                    tools:text="@string/title_activity_settings" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_opt_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/answer_button"
                    android:text="text" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_opt_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/answer_button"
                    android:text="text" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_opt_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/answer_button"
                    android:text="text" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_opt_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/answer_button"
                    android:text="text" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/bool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/rationale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_quit"
                style="?android:attr/buttonStyleSmall"
                android:drawableStart="@drawable/ic_baseline_keyboard_arrow_left_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_weight="1"
                android:text="Quit" />

            <Button
                android:id="@+id/btn_next"
                style="?android:attr/buttonStyleSmall"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_weight="1"
                android:text="Skip" />
        </LinearLayout>
    </LinearLayout>
</layout>


