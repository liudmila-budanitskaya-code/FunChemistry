<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="site.budanitskaya.chemistryquiz.fine">

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChemistryQuiz">
        <activity
            android:name="site.budanitskaya.chemistryquiz.fine.cardsscreen.CardsActivity"
            android:theme="@style/Theme.MainActivity" />
        <activity android:name="site.budanitskaya.chemistryquiz.fine.ui.login.LoginActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

            <intent-filter>
                <action android:name="site.budanitskaya.chemistryquiz.fine.ui.login.LoginActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="site.budanitskaya.chemistryquiz.fine.ui.splash.SplashActivity"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:parentActivityName="site.budanitskaya.chemistryquiz.fine.MainActivity"
            android:theme="@style/Theme.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>